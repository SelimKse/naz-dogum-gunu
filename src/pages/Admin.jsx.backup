  const addTimelineEvent = async () => {
    if (newEvent.date && newEvent.title && newEvent.description) {
      // Tarih formatƒ±nƒ± DD.MM.YYYY'ye √ßevir
      let formattedDate = newEvent.date;
      if (newEvent.date.includes("-")) {
        // YYYY-MM-DD formatƒ±ndan DD.MM.YYYY'ye √ßevir
        const [year, month, day] = newEvent.date.split("-");
        formattedDate = `${day}.${month}.${year}`;
      }

      const event = {
        id:
          timelineEvents.length > 0
            ? Math.max(...timelineEvents.map((e) => e.id)) + 1
            : 1,
        ...newEvent,
        date: formattedDate,
      };

      const updatedEvents = [...timelineEvents, event];

      try {
        const response = await fetch("/api/timeline", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ events: updatedEvents }),
        });

        const data = await response.json();

        if (data.success) {
          setTimelineEvents(updatedEvents);
          setNewEvent({ date: "", title: "", description: "", icon: "üìÖ" });
          showModal(
            "Ba≈üarƒ±lƒ±",
            "Timeline olayƒ± MongoDB'ye eklendi!",
            "success"
          );
        } else {
          showModal("Hata", `Ekleme hatasƒ±: ${data.error}`, "error");
        }
      } catch (error) {
        console.error("Timeline ekleme hatasƒ±:", error);
        showModal("Hata", "Olay eklenirken bir hata olu≈ütu!", "error");
      }
    }
  };

  const removeTimelineEvent = async (id) => {
    showModal(
      "Onay Gerekli",
      "Bu olayƒ± silmek istediƒüinize emin misiniz?",
      "question",
      async () => {
        const updatedEvents = timelineEvents.filter((event) => event.id !== id);

        try {
          const response = await fetch("/api/timeline", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ events: updatedEvents }),
          });

          const data = await response.json();

          if (data.success) {
            setTimelineEvents(updatedEvents);
            showModal(
              "Ba≈üarƒ±lƒ±",
              "Timeline olayƒ± MongoDB'den silindi!",
              "success"
            );
          } else {
            showModal("Hata", `Silme hatasƒ±: ${data.error}`, "error");
          }
        } catch (error) {
          console.error("Timeline silme hatasƒ±:", error);
          showModal("Hata", "Olay silinirken bir hata olu≈ütu!", "error");
        }
      }
    );
  };

  const downloadTimelineJSON = () => {
    const dataStr = JSON.stringify(timelineEvents, null, 2);
    const dataUri =
      "data:application/json;charset=utf-8," + encodeURIComponent(dataStr);

    const exportFileDefaultName = "timeline.json";

    const linkElement = document.createElement("a");
    linkElement.setAttribute("href", dataUri);
    linkElement.setAttribute("download", exportFileDefaultName);
    linkElement.click();
  };

  if (!isAuthenticated) {
    return (
      <>
        <Modal
          isOpen={modal.isOpen}
          onClose={closeModal}
          title={modal.title}
          message={modal.message}
          type={modal.type}
          onConfirm={modal.onConfirm}
        />
        <div className="min-h-screen bg-slate-50 flex items-center justify-center p-4">
          <motion.div
            className="bg-white rounded-2xl shadow-2xl max-w-md w-full border border-slate-200"
            initial={{ opacity: 0, scale: 0.95, y: 20 }}
            animate={{ opacity: 1, scale: 1, y: 0 }}
            transition={{ duration: 0.5, ease: "easeOut" }}
          >
            <div className="p-8">
              <div className="text-center mb-8">
                <div className="w-16 h-16 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
                  <svg className="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                </div>
                
                <h2 className="text-2xl font-bold text-slate-900 mb-2">
                  Admin Giri≈üi
                </h2>
                <p className="text-slate-600">
                  Y√∂netim paneline eri≈üim i√ßin ≈üifre gerekli
                </p>
              </div>

              <div className="space-y-4">
                <div>
                  <label className="block text-sm font-medium text-slate-700 mb-2">
                    ≈ûifre
                  </label>
                  <input
                    type="password"
                    value={password}
                    onChange={(e) => setPassword(e.target.value)}
                    placeholder="≈ûifrenizi giriniz..."
                    className="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                    onKeyPress={(e) => e.key === "Enter" && handleLogin()}
                  />
                </div>

                <motion.button
                  onClick={handleLogin}
                  className="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
                  whileHover={{ scale: 1.02 }}
                  whileTap={{ scale: 0.98 }}
                >
                  Giri≈ü Yap
                </motion.button>
              </div>
            </div>
          </motion.div>
        </div>
      </>
    );
  }

  return (
    <>
      <Modal
        isOpen={modal.isOpen}
        onClose={closeModal}
        title={modal.title}
        message={modal.message}
        type={modal.type}
        onConfirm={modal.onConfirm}
      />
      <div className="min-h-screen bg-slate-50">
        <motion.div
          className="bg-white shadow-sm border-b border-slate-200"
          initial={{ opacity: 0, y: -20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ duration: 0.5 }}
        >
          {/* Header */}
          <div className="px-6 py-4 border-b border-slate-200">
            <div className="flex items-center justify-between">
              <div className="flex items-center space-x-4">
                <div className="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center">
                  <svg className="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h1 className="text-xl font-semibold text-slate-900">Admin Panel</h1>
                  <p className="text-sm text-slate-600">Naz'ƒ±n Doƒüum G√ºn√º Y√∂netimi</p>
                </div>
              </div>
              
              <div className="flex items-center space-x-4">
                <div className="text-sm text-slate-600">
                  Ho≈ü geldin, Admin
                </div>
                <button
                  onClick={handleLogout}
                  className="px-4 py-2 text-sm font-medium text-slate-700 bg-slate-100 rounded-lg hover:bg-slate-200 transition-colors"
                >
                  √áƒ±kƒ±≈ü
                </button>
              </div>
            </div>
          </div>

          {/* Navigation */}
          <div className="flex">
            <div className="w-64 bg-white border-r border-slate-200 min-h-screen">
              <nav className="p-4 space-y-2">
                <button
                  onClick={() => setActiveTab("assets")}
                  className={`w-full flex items-center px-4 py-3 text-left rounded-lg transition-colors ${
                    activeTab === "assets"
                      ? "bg-blue-50 text-blue-700 border border-blue-200"
