  // Asset y√ºkleme fonksiyonu - Vercel Blob Storage
  const handleAssetUpload = async (filename, event) => {
    const file = event.target.files[0];
    if (!file) return;

    // Dosya boyutu kontrol√º (500MB)
    const maxSize = 500 * 1024 * 1024; // 500MB
    if (file.size > maxSize) {
      showModal(
        "Dosya √áok B√ºy√ºk",
        `${filename} maksimum 500MB olabilir (≈üu an: ${(file.size / 1024 / 1024).toFixed(2)} MB)`,
        "error"
      );
      return;
    }

    console.log(`üì¶ ${filename} y√ºkleniyor (${(file.size / 1024 / 1024).toFixed(2)} MB)...`);

    // Progress ba≈ülat
    setUploadProgress((prev) => ({ ...prev, [filename]: 0 }));

    try {
      // Vercel Blob client-side upload (direkt Blob'a, server'dan ge√ßmez)
      const newBlob = await upload(filename, file, {
        access: "public",
        handleUploadUrl: "/api/upload-chunk",
        onUploadProgress: ({ percentage }) => {
          setUploadProgress((prev) => ({
            ...prev,
            [filename]: Math.round(percentage),
          }));
          console.log(`‚¨ÜÔ∏è ${filename}: ${Math.round(percentage)}%`);
        },
      });

      console.log("‚úÖ Upload tamamlandƒ±:", newBlob.url);

      // Progress'i 100'de tut
      setUploadProgress((prev) => ({ ...prev, [filename]: 100 }));

      // 1 saniye sonra temizle ve g√ºncelle
      setTimeout(() => {
        setUploadProgress((prev) => {
          const newProgress = { ...prev };
          delete newProgress[filename];
          return newProgress;
        });

        // Asset durumunu g√ºncelle
        setAssetStatus((prev) => ({ ...prev, [filename]: true }));
        setAssetUrls((prev) => ({ ...prev, [filename]: newBlob.url }));
      }, 1000);

      showModal("Ba≈üarƒ±lƒ±", `${filename} Vercel Blob'a y√ºklendi! (${(file.size / 1024 / 1024).toFixed(2)} MB)`, "success");
    } catch (error) {
      console.error("Upload error:", error);

      // Progress'i temizle
      setUploadProgress((prev) => {
        const newProgress = { ...prev };
        delete newProgress[filename];
        return newProgress;
      });

      showModal(
        "‚ùå Hata",
        `Dosya y√ºklenemedi!\n\nHata: ${error.message}`,
        "error"
      );
    }
  };

  // Asset silme fonksiyonu - Otomatik silme
